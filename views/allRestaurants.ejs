<!-- 
    ------All Restaurants Screen------
    This will contain all restuarants within our datbase. You will be able to sort all
    restaurants by Rating, or Name.
    For each restuarant, we will displaying the following attributes:
        -   Name
        -   Bio
        -   Rating
        -   Picture
 -->

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Home</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="styles.css">
    </head>
    <body>
        <h1>Gonzaga Grub Guide</h1>
        <div class="nav-bar">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/allRestaurants">View All Restaurants</a></li>
                <li><a href="/review">Leave a Review</a></li>
                <li><a href="/newRestaurant">Add a Restaurant</a></li>
            </ul>
        </div>
        <div id="header">
            <h2>All Gonzaga Area Resturants</h3>
            <!-- Control buttons -->
            <legend>Filter By:</legend>
            <button><a href="/allRestaurants">Show all</a></button>
            <button><a href="/sortByRating">Rating</a></button>
            <button><a href="/sortByName">Name</a></button>
        </div>
        <% rows.forEach((val)=>{ 
            %>
            <div class="single-restaurant">
                <div class="restaurant-info">
                    <h3><a href="/restaurant?name=<%= val.name %>"><%= val.name %></a></h3>
                    <ul>
                        <li>Type: <%= val.food_type %></li>
                        <li>Rating: <%= val.rating %></li>
                        <li>Address: <%= val.address %></li>
                        <li>Phone #: <%= val.phone_number %></li>
                        <li>Bio: <%= val.bio %></li>
                    </ul>
                </div>
                <div class="restaurant-picture">
                    <img src="../public/photos/<%= val.picture %>">
                </div>
            </div> 
            <%
        }) %>
    </body>
</html>