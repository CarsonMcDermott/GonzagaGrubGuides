<!--
    -----Reviews Page-----
    Lists all the reviews and related information with the reviews.
    Possiblity to sort by rating 
        Reviews will show:
        - Rating (out of 5)
        - Review
        - Option for a user uploaded picture
-->

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Home</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="styles.css">
    </head>
    <body>
        <h1>All Reviews</h1>
        <div class="nav-bar">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/allRestaurants">View All Restaurants</a></li>
                <li><a href="/review">Leave a Review</a></li>
                <li><a href="/newRestaurant">Add a Restaurant</a></li>
            </ul>
        </div>
        <% rows.forEach((val)=>{ %>
            <h2><%= val.name %></h2>
            <h3>Rating: <%= val.rating %></h3>
            <h4>Comments: </h4>
            <p><%= val.comments %></p>
            <%
        }) %>
    </body>
</html>